{
	"files": [],
	"references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",

		"resolveJsonModule": true,
		"esModuleInterop": true,

		"verbatimModuleSyntax": true,
		"noEmit": true
	},
	"include": ["src"]
}
